<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Positive integer y is 50 percent of 50 percent of positive integer x, and y percent of x equals 100. What is the value of x?" />

            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/question1_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50" />

                <RadioButton
                    android:id="@+id/question1_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100" />

                <RadioButton
                    android:id="@+id/question1_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200" />

                <RadioButton
                    android:id="@+id/question1_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000" />

                <RadioButton
                    android:id="@+id/question1_option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000" />
            </RadioGroup>
            <TextView
                android:id="@+id/answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="#d9534f"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="The average (arithmetic mean) of the integers from 200 to 400, inclusive, is how much greater than the average of the integers from 50 to 100, inclusive?" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/question2_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150" />

                <RadioButton
                    android:id="@+id/question2_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175" />

                <RadioButton
                    android:id="@+id/question2_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200" />

                <RadioButton
                    android:id="@+id/question2_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="225" />

                <RadioButton
                    android:id="@+id/question2_option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300" />
            </RadioGroup>
            <TextView
                android:id="@+id/answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#d9534f"
                android:textStyle="bold"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="John deposited $ 10,000 to open a new savings account that earned 4 percent annual interest, compounded quarterly. If there were no other transactions in the account, what was the amount of money in Johnâ€™s account 6 months after the account was opened?" />

            <EditText
                android:id="@+id/question3_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="#d9534f"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="A researcher computed the mean, the median, and the standard deviation for a set of performance scores. If 5 were to be added to each score, which of these three statistics would change?" />

            <CheckBox
                android:id="@+id/question4_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean" />

            <CheckBox
                android:id="@+id/question4_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Median" />

            <CheckBox
                android:id="@+id/question4_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Deviation" />

            <TextView
                android:id="@+id/answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="#d9534f"
                android:text=""/>

            <Button
                android:onClick="submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Submit"/>

            <Button
                android:onClick="reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Reset"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
